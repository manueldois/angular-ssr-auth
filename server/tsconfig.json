{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2019",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"]
    },
    "include": [
        "src/**/*"
    ]
}